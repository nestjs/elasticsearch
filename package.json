{
  "name": "@nestjs/elasticsearch",
  "version": "11.1.0",
  "description": "Nest - modern, fast, powerful node.js web framework (@elasticsearch)",
  "author": "Kamil Mysliwiec",
  "license": "MIT",
  "scripts": {
    "lint": "eslint \"lib/**/*.ts\" --fix",
    "format": "prettier \"lib/**/*.ts\" --write",
